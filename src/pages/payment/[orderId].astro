        margin-bottom: 20px;
    }

    .ticket-header {
        text-align: center;
        margin-bottom: 15px;
    }

    .ticket-header h2 {
        margin: 0;
        font-size: 1.5rem;
    }

    .ticket-header p {
        margin: 5px 0 0 0;
        font-size: 0.9rem;
    }

    .ticket-divider {
        text-align: center;
        color: #333;
        margin: 10px 0;
    }

    .ticket-info p {
        margin: 5px 0;
        font-size: 0.9rem;
    }

    .ticket-items {
        margin: 15px 0;
    }

    .ticket-item {
        display: flex;
