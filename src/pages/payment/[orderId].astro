        font-size: 0.85rem;
    }

    .ticket-footer p {
        margin: 5px 0;
    }

    .ticket-actions {
        display: flex;
        gap: 10px;
    }

    .btn-print,
    .btn-close {
        flex: 1;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
