            const { supabase } = await import('/src/lib/supabase.js');
            
            const { data, error } = await supabase
                .from('categories')
                .insert([categoryData])
                .select();

            if (error) throw error;
            return data && data.length > 0;
        } catch (error) {
            console.error('Error creating category:', error);
            return null;
        }
    }

    async function updateCategory(id, categoryData) {
        try {
            const { supabase } = await import('/src/lib/supabase.js');
            
            const { data, error } = await supabase
                .from('categories')
                .update(categoryData)
                .eq('id', id)
                .select();

            if (error) throw error;
            return data && data.length > 0;
        } catch (error) {
            console.error('Error updating category:', error);
            return null;
        }
    }

    async function deleteCategory(id) {
        if (!confirm('¬øEst√° seguro de que desea eliminar esta categor√≠a?')) return;

        try {
            const { supabase } = await import('/src/lib/supabase.js');
            
            const { error } = await supabase
                .from('categories')
                .delete()
                .eq('id', id);

            if (error) throw error;

            showToast('Categor√≠a eliminada exitosamente', 'success');
            loadCategories();
            loadCategoriesSelect();
        } catch (error) {
            console.error('Error deleting category:', error);
            showToast('Error al eliminar la categor√≠a', 'error');
        }
    }

    async function loadCategories() {
        if (!categoriesListContainer) return;
        
        try {
            const { supabase } = await import('/src/lib/supabase.js');
            
            const { data, error } = await supabase
                .from('categories')
                .select('*')
                .order('order', { ascending: true });
            
            if (error) {
                console.error('‚ùå Error fetching categories:', error);
                categories = [];
            } else {
                categories = data || [];
            }
            
            renderCategories();
        } catch (error) {
            console.error('Error loading categories:', error);
        }
    }

    async function loadCategoriesSelect() {
        try {
            const { supabase } = await import('/src/lib/supabase.js');
            
            const { data: categoriesData, error } = await supabase
                .from('categories')
                .select('id, name, icon')
                .order('order', { ascending: true });

            if (error) {
                console.error('Error loading categories select:', error);
                return;
            }

            const categorySelect = document.getElementById('category_id');
            if (!categorySelect) return;

            // Limpiar opciones existentes (excepto la primera)
            while (categorySelect.options.length > 1) {
                categorySelect.remove(1);
            }

            // Agregar categor√≠as
            if (categoriesData && categoriesData.length > 0) {
                categoriesData.forEach(cat => {
                    const option = document.createElement('option');
                    option.value = cat.id;
                    option.textContent = `${cat.icon} ${cat.name}`;
                    categorySelect.appendChild(option);
                });
            }
        } catch (error) {
            console.error('Error loading categories select:', error);
        }
    }

    function renderCategories() {
        if (!categoriesListContainer) return;

        if (!categories || categories.length === 0) {
            categoriesListContainer.innerHTML = `
                <div class="no-data">
                    <h3>üì¶ Sin categor√≠as</h3>
                    <p>No hay categor√≠as creadas. ¬°Crea una nueva!</p>
                </div>
            `;
            return;
        }

        categoriesListContainer.innerHTML = categories.map(category => `
            <div class="premium-card category-card">
                <div class="card-header" style="text-align: center; padding: 20px;">
                    <div style="font-size: 48px; margin-bottom: 12px;">
                        ${category.icon || 'üì¶'}
                    </div>
                    <h3 style="margin: 0 0 8px 0; color: #2c3e50; font-size: 18px; font-weight: 700;">
                        ${category.name}
                    </h3>
                    <p style="margin: 0; color: #7f8c8d; font-size: 13px;">
                        Orden: ${category.order}
                    </p>
                </div>
                
                <div class="card-body" style="text-align: center; padding: 15px 20px;">
                    ${category.description ? `
                        <p style="margin: 0; color: #7f8c8d; font-size: 13px; line-height: 1.5;">
                            ${category.description}
                        </p>
                    ` : '<p style="margin: 0; color: #bdc3c7; font-size: 13px;">Sin descripci√≥n</p>'}
                </div>
                
                <div class="card-footer" style="display: grid; grid-template-columns: 1fr 1fr; gap: 8px;">
                    <button class="btn btn-sm btn-warning" onclick="window.editCategory('${category.id}')" style="width: 100%;">
                        ‚úèÔ∏è Editar
                    </button>
                    <button class="btn btn-sm btn-danger" onclick="window.deleteCategory('${category.id}')" style="width: 100%;">
                        üóëÔ∏è Eliminar
                    </button>
                </div>
            </div>
        `).join('');
    }

    window.editCategory = function(id) {
        const category = categories.find(c => c.id === id);
        if (category) showCategoryForm(category);
    };

    window.deleteCategory = deleteCategory;
</script>